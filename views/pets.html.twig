<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <title>Tamagotchi</title>
</head>
<body>
    <div class='container'>
    <h1><strong>My Tamagotchis</strong></h1>
    {% if pets is not empty %}
        <h2>Here is a list of all your pets:</h2>
            {% for pet in pets %}

            <h3>{{ pet.getName }}</h3>
<div class='list-group'>
    <form action='/feeding' method='post' class='list-group-item'>
            <span class='glyphicon glyphicon-cutlery'></span>
            <span class='badge'>{{ pet[0].getFood }}</span>
        <button type='submit' class='btn btn-default'><span class='glyphicon glyphicon cutlery'></span>Feed</button>
    </form>

</div>
            <ul>
                <li>Nourishment Level: {{ pet.getFood }}</li>
                <li>Mood: {{ pet.getMood }}</li>
            </ul>
                <div class='btn-group btn-group-justified' role='group'>
                    <div class='btn-group' role='group'>
                <form action='feeding' method='post'>
                    <button type='submit' class='btn btn-default'>feed</button>
                </form>
            </div>
            <div class='btn-group' role='group' aria-label='play'>
                <form action='feelings' method='post'>
                    <button type='submit' class='btn btn-default'>play</button>
                </form>
            </div>
            </div>
            {% endfor %}
    {% endif %}

    <form action='/pets' method='post'>
        <label for='name'>Name</label>
        <input id='name' name='name' type='text'>
        <button type='submit'>New Tamagotchi!</button>
    </form>
    <form action='delete_pets' method='post'>
        <button type='submit'>clear list</button>
    </form>
    </div>
</body>
</html>
